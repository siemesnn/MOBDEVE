<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wine"
    tools:context=".matched_with_user">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/bold"
        android:text="It's a Match!"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/matched_icon"
        android:layout_width="370dp"
        android:layout_height="380dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@drawable/cherry_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.496" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:fontFamily="@font/bold"
        android:text="Nana"
        android:textAlignment="center"
        android:textColor="@color/wine"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/matched_icon"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="@id/matched_icon"
        app:layout_constraintTop_toTopOf="@id/matched_icon" />

    <TextView
        android:id="@+id/partnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="268dp"
        android:fontFamily="@font/bold"
        android:text="Jeongwoo"
        android:textAlignment="center"
        android:textColor="@color/wine"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/matched_icon"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="@id/matched_icon"
        app:layout_constraintTop_toTopOf="@id/matched_icon" />

    <Button
        android:id="@+id/go2chatButton"
        android:layout_width="324dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/bold"
        android:text="Go to chat"
        android:onClick="go2chat"
        android:textColor="@color/wine"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matched_icon" />

    <Button
        android:id="@+id/keepSwipeButton"
        android:layout_width="324dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/wine"
        android:fontFamily="@font/bold"
        android:onClick="keepSwipe"
        android:text="Keep Swiping"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go2chatButton"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>